<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="org.daisy.pipeline.ui.JobView">
    <ScrollView>
        <StackLayout Padding="10" >
            <Label x:Name="Status" Text="Job is Starting" />

            <Label x:Name="ScriptName"
                   SemanticProperties.HeadingLevel="Level1"
                   VerticalOptions="Fill"/>

            <StackLayout x:Name="JobParameters" Spacing="10" />


            <Editor x:Name="Logs" IsReadOnly="True" HeightRequest="250"
                    />

            <HorizontalStackLayout >
                <Button Text="Relaunch"/>
                <Button Text="Delete" />
            </HorizontalStackLayout>
        </StackLayout>
    </ScrollView>
</ContentView>
