<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="org.daisy.pipeline.ui.JobsPage"
             Title="Jobs"
             Padding="10" >
    <StackLayout>
        <HorizontalStackLayout x:Name="JobsList" IsVisible="False" SemanticProperties.Description="Jobs navigation bar">
            <!-- List of buttons here -->
        </HorizontalStackLayout>
        <VerticalStackLayout x:Name="JobFrame" SemanticProperties.Description="Job details">
            <!-- Select job view to display here -->
            <Label Text="No jobs launched yet" x:Name="NoJobs"/>
        </VerticalStackLayout>
    </StackLayout>
</ContentPage>